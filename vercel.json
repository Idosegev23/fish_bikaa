{
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@3.2.0",
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/holiday-scheduler",
      "schedule": "0 9 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
